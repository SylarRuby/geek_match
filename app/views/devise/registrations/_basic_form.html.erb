<h2>Basic Account Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {id: 'basic_form'}) do |f| %>

  <%= devise_error_messages! %>

  <%= hidden_field_tag 'plan', params[:plan] %>
  <div class='row'>
    <div class="large-12 columns">
      <%= f.label :name, 'Username' %>
      <%= f.text_field :name, autofocus: true, placeholder: "It's best to use your full name with space" %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, placeholder: 'Email address' %>
    </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :password %>
      <% if @validatable %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", placeholder:'********' %>
   </div>
  </div>

  <div class="row">
    <div class="large-12 columns">
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '********' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'button small' %>
  </div>
<% end %>