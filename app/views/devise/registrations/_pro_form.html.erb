<h2>Pro Account Sign up</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>

    <%= hidden_field_tag 'plan', params[:plan] %>
    <div class="field">
      <%= f.label :name, 'Username' %>
      <%= f.text_field :name, autofocus: true, placeholder: "It's best to use your full name with space" %>
    </div>
      <div class="field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, placeholder: 'Email address' %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @validatable %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "off", placeholder: '********' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: '********' %>
      </div>

      <div class="field">
        <%= label_tag :card_number, "Credit Card Number" %>
        <%= text_field_tag :card_number, nil, name: nil, class: 'form-control', placeholder: '**** **** **** **** ****'%>
      </div>

      <div class="field">
        <%= label_tag :card_code, "Security Code (CVV)" %>
        <%= text_field_tag :card_code, nil, name: nil, class: 'form-control', placeholder: '***' %>
      </div>
      <div class="field">
        <%= label_tag :card_month, "Credit Exp Date" %>
        <%= select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"} %>
        <%= select_year nil, {start_year: Date.today.year, end_year: Date.today.year+15}, {name: nil, id: "card_year"} %>
      </div>    

      <div class="actions field">
        <%= f.submit "Sign up", class: 'button success small', id: 'pro-form-submit-btn' %>
      </div>
<% end %>